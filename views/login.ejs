<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="styles/login.css">
    <title>Login | Electro-Motive Solutions</title>
    <link rel="icon" type="image/x-icon" href="/trans.png">
</head>
<body>
    <form action="/signin" method="post">
    <div class="login-box">
        <div class="login-header">
            <header>Login</header>
        </div>
        <div class="message">
            <% if(locals.pass1 != locals.pass2){%>
                <p>Password Incorrect!</p>
            <%}%>
        </div>
        <div class="input-box">
            <input name="email" type="text" class="input-field" placeholder="Email" autocomplete="off" required>
        </div>
        <div class="input-box">
            <input name="password" type="password" class="input-field" placeholder="Password" autocomplete="off" required>
        </div>
        <!--<div class="forgot">
            <section>
                <input type="checkbox" id="check">
                <label for="check">Remember me</label>
            </section>
            <section>
                <a href="#">Forgot password</a>
            </section>
        </div>-->
        <div class="input-submit">
            <button class="submit-btn" id="submit"></button>
            <label for="submit">Sign In</label>
        </div>
    </form>
        <div class="sign-up-link">
            <form id="sign" action="/sign" method="post"></form><p>Don't have account? <a onclick="signIn()">Sign Up</a></form></p>
        </div>
    </div>
</body>
<script>
    function signIn(){
        document.getElementById("sign").submit();
    }
</script>
</html>